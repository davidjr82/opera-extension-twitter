{
	"manifest_version": 2,

	"name": "Open source twitter extension",
	"description": "Twitter for Opera Sidebar. Source: https://github.com/davidjr82/opera-extension-twitter",

	"background": {
		"scripts": ["background.js"]
	},

    "icons": {
        "128": "icons/128.png",
        "19": "icons/19.png",
        "38": "icons/38.png",
        "48": "icons/48.png"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.twitter.com/*"
    ],

	"sidebar_action": {
        "default_icon": {
            "19": "icons/19.png",
            "38": "icons/38.png"
        },
        "default_panel": "sidebar.html",
		"default_title": "Twitter for Opera Sidebar"
	},

    "version": "1.0.0"
}